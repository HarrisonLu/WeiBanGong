<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springapp.mvc.dao.customer.CommentMapper">
    <resultMap id="CommentResultMap" type="Comment">
        <id property="id" column="id"/>
        <result property="details" column="details"/>
        <result property="time" column="Time"/>
        <result property="userId" column="user_id"/>
        <result property="userChineseName" column="user_chinese_name"/>
        <result property="userEnglishName" column="user_english_name"/>
        <result property="customerId" column="customer_id"/>
    </resultMap>

    <insert id="insertComment" parameterType="Comment">
        insert into t_comment (details, user_id, customer_id)
                values (#{details}, #{userId}, #{customerId})
    </insert>
</mapper>