<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springapp.mvc.contacts.dao.DepartmentMapper">
    <resultMap id="DepartmentResult" type="Department">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="createdTime" column="created_time"/>
    </resultMap>

    <resultMap id="DepartmentUserResult" type="Department" extends="DepartmentResult">
        <collection property="users" ofType="User" columnPrefix="user_">
            <id property="id" column="id"/>
            <result property="email" column="email"/>
            <result property="chineseName" column="chinese_name"/>
        </collection>
    </resultMap>

    <insert id="insertDepartment" parameterType="Department" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
         insert into t_department values(#{id},#{name},#{createdTime})
    </insert>

    <select id="selectDepartmentById" parameterType="int" resultMap="DepartmentUserResult">
        select d.id,d.name,u.email as user_email,u.chinese_name as user_chinese_name
        from t_department d
        left outer join t_user_department ud on d.id=ud.department_id
        left outer join t_user u on ud.user_id=u.id
        where d.id=#{id}
    </select>

    <select id="selectAllDepartment" resultMap="DepartmentResult">
        select * from t_department
    </select>

    <!--修改部门-->
    <update id="updateDepartment" parameterType="Department">
        update t_department set
        name = #{name}
        where id = #{id}
    </update>

    <!--删除部门-->
    <delete id="deleteDepartment" parameterType="int">
        delete from t_department where id = #{id}
    </delete>

    <select id="findDepartmentByName" parameterType="java.lang.String" resultMap="DepartmentResult">
        select * from t_department where name=#{name}
    </select>

</mapper>